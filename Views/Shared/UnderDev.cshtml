
@{
    ViewBag.Title = "UnderDev";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Under Development</title>
    <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #f39c12, #f1c40f);
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    .container {
      text-align: center;
      max-width: 600px;
    }

    .container h1 {
      font-size: 3em;
      margin-bottom: 0.5em;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .container p {
      font-size: 1.5em;
      margin-bottom: 2em;
    }

    .construction-icon {
      font-size: 4em;
      animation: bounce 1.5s infinite;
    }

    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    .btn-home {
      padding: 0.8em 2em;
      background: #fff;
      color: #f39c12;
      font-size: 1em;
      font-weight: bold;
      text-decoration: none;
      border-radius: 25px;
      box-shadow: 2px 4px 6px rgba(0, 0, 0, 0.3);
      transition: background 0.3s, transform 0.3s;
    }

    .btn-home:hover {
      background: #f39c12;
      color: #fff;
      transform: scale(1.1);
    }
    </style>
</head>
<body>
    <div class="container">
        <div class="construction-icon">ðŸš§</div>
        <h1>Page Under Development</h1>
        <p>We're working hard to bring you something amazing. Stay tuned!</p>
   
    </div>
</body>
</html>
