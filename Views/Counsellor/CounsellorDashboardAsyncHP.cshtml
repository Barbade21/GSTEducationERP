<html>
<head>
    <title>Enquiry vs Admission Count</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <!-- Graph Section -->
    <script>
        // Set default dates from the ViewBag
        @*window.onload = function() {
            document.getElementById('startDate').value = '@ViewBag.StartDate';
            document.getElementById('endDate').value = '@ViewBag.EndDate';

            // Trigger chart update after setting the default date range
            updateChart();
