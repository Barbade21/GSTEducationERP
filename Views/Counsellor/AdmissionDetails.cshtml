                                            <input type="date" class="form-control" id="endDate" name="endDate">
                                        </div>
                                        <div class="col-md-2">
                                            @Html.DropDownList("CourseName", (IEnumerable<SelectListItem>)ViewBag.Course, "---Select Course---",
