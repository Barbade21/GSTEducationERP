            -moz-border-radius: 50px;
            display: block;
            height: 100px;
            overflow: hidden;
            width: 300px;
            position: relative;
            margin: 30px auto 0;
            cursor: pointer;
        }

        .slider {
            height: 100%;
            position: relative;
            width: 200%;
        }

        .slider-button {
            -moz-border-radius: 50px;
            background-color: #f2f2f2;
