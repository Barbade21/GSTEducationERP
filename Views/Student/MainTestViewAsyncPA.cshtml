    </div>

    <br>


    <div class="card " style="padding: 10px;">
        @*<table id="LoadList1" class="wrapper table-striped table-bordered" style="width:100%">*@

        <ul class="nav nav-tabs" id="customTab3" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="tabAllTests" data-toggle="tab" href="#" data-url="@Url.Action("AllTestListAsyncPA", "Student")" role="tab" aria-controls="oneAA" aria-selected="true">
                    <i class="bi bi-journal-richtext me-2"></i>All Test
