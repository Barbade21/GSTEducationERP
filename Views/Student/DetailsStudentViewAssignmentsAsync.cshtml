@model GSTEducationERPLibrary.Student.Student

<style>
    .LabColor {
        color: #ff0000;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .icon {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    /* Style table headers */
    #example1 th {
        background-color: #3b5999;
        color: white;
    }

    /* Style buttons */
    .dataTables_wrapper .dt-buttons button {
        background-color: #3b5999;
        border: none;
        color: white;
    }

    /* Style modal header */
    .modal-header h2 {
        color: #3b5999;
    }
</style>

<div class="add-buttons" style="margin-top:-20px;margin-right:10px">
   
</div>

<table id="example1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
          
            <th hidden>
                @Html.DisplayNameFor(model => model.AssignmentId)
            </th>
            <th class="LabColor">
                Topic Name
            </th>
            <th hidden>
                Assignment File
            </th>
            <th class="LabColor">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstviewassignment)
        {
            <tr>
              
                <td hidden>
                    @Html.DisplayFor(modelItem => item.AssignmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicName)
                </td>   
                <td hidden>
                    @Html.DisplayFor(modelItem => item.AssignmentFile)
                </td>
                <td>
                    <a href="@Url.Content(item.AssignmentFile)" class="icon" target="_blank" title="View & Download Assignment">
                        <img src="~/Content/StudentTemplate/icon/download.gif" width="40" height="40">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Content/plugins/jquery/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

