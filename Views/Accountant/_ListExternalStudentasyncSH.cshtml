            });

            // Alternatively, you can use the following approach
            // $('#btnCancel').on('click', function () {
            //     closeModal();
            // });
        });
        $.ajax({
            url: url,
            type: 'GET',
            success: function (response) {
                $('#ExternalStudents').html(response);

                var table = $('#StudentList table').DataTable({
