        </script>




        <script>
            $("#Industry").on('click', function () {
                var url = $(this).data('url');
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (response) {
                        $('#partialModal .modal-body').html(response);

                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        </script>
    }
